<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

   <android.support.v7.widget.Toolbar
       android:id="@+id/shop_toolbar"
       android:background="#55A8DE"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       >
       <TextView
           android:id="@+id/shop_title"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="商城"
           android:gravity="center"
           android:textSize="20dp"
           android:textColor="#FCFCFC"

           />
   </android.support.v7.widget.Toolbar>
    <android.support.design.widget.TabLayout
        android:layout_below="@id/shop_toolbar"
        android:id="@+id/shop_tab"
        android:layout_width="match_parent"
        app:tabSelectedTextColor="#70CDF9"
        android:background="#FCFCFC"
        android:layout_height="wrap_content"
       app:tabIndicatorColor="#70CDF9"

        />
    <android.support.v4.view.ViewPager
        android:layout_below="@id/shop_tab"
        android:id="@+id/shop_viewpager"
        android:layout_width="match_parent"
        android:background="#FAF5F5"


        android:layout_height="match_parent"/>
</RelativeLayout>