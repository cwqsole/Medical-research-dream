<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <!--<include-->
    <!--android:id="@+id/include"-->
    <!--layout="@layout/top_title"
     android.support.v4.widget.NestedScrollView/>-->


    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_above="@+id/rl3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
                android:id="@+id/videoplayer"
                android:layout_width="match_parent"
                android:layout_height="260dp"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">
                <TextView
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:id="@+id/tv_name_big"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="@color/txt_33"/>



                <TextView
                    android:id="@+id/tv_sale_num"
                    android:layout_marginTop="16dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/tv_name_big"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/txt_99"
                    android:textSize="12sp"
                    android:text="已销售"/>

                <TextView
                    android:id="@+id/tv_price_big"
                    android:layout_marginTop="15dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/tv_sale_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ef654f"
                    android:textSize="16sp"
                    android:text="￥389元"/>

                <TextView
                    android:layout_marginLeft="8dp"
                    android:id="@+id/tv_price_big2"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@id/tv_price_big"
                    android:layout_alignBottom="@id/tv_price_big"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/txt_99"
                    android:textSize="12sp"
                    android:text="￥389元"/>


                <LinearLayout
                    android:layout_marginBottom="20dp"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_below="@id/tv_price_big"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_tip1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="@color/txt_99"
                        android:text="· 随时观看"/>

                    <TextView
                        android:layout_marginLeft="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="@color/txt_99"
                        android:text="· 全新升级"/>

                </LinearLayout>

            </RelativeLayout>
            <View android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c7c7cb"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:paddingBottom="5dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="5dp">

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/tv_price"
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/txt_26"
                    android:textSize="16sp" />


                <ImageView
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingLeft="8dp"
                    android:visibility="gone"
                    android:layout_centerVertical="true"
                    android:src="@drawable/goumai"
                    android:id="@+id/tv_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    />

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/colorTheme"
                    android:textSize="15sp" />

            </RelativeLayout>

            <android.support.design.widget.TabLayout
                android:id="@+id/tab"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:tabIndicatorColor="@color/colorTheme"
                app:tabSelectedTextColor="@color/colorTheme"
                app:tabTextColor="@color/colorTabText" />
            <android.support.v4.view.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <RelativeLayout
        android:background="@drawable/et_bg"
        android:layout_marginTop="1dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/rl3"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:layout_marginLeft="15dp"
            android:id="@+id/tv_amount_desc"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实付金额"
            android:textSize="13sp"
            android:textColor="@color/txt_33"/>

        <TextView
            android:layout_toRightOf="@id/tv_amount_desc"
            android:layout_centerVertical="true"
            android:id="@+id/tv_total_price"
            android:textSize="23sp"
            android:text="3601"
            android:textColor="@color/btn_orange"
            android:layout_marginLeft="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_study"
            android:gravity="center"
            android:background="@color/btn_orange"
            android:textColor="@color/colorWhite"
            android:textSize="17sp"
            android:text="确认支付"
            android:layout_alignParentRight="true"
            android:paddingLeft="28dp"
            android:paddingRight="28dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </RelativeLayout>
</RelativeLayout>