<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.usercwq.medicalmall.ui.acticitys_my.RegisterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3.0dip"
            android:padding="10.0dip"
            android:scaleType="center"
            android:src="@drawable/guanbi_2"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="新用户注册"
            android:textColor="#1B1B1B"
            android:textSize="17sp" />
    </RelativeLayout>

    <View
        android:background="@color/colorLine"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>



    <LinearLayout
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:layout_marginTop="80dp"
        android:id="@+id/ll_quick"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:gravity="center_vertical"
            android:paddingLeft="9dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/txt1"
                android:text="+86"
                android:textColor="@color/colorTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:id="@+id/view1"
                android:layout_marginLeft="12dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/txt1"
                android:background="@drawable/shu"
                android:layout_width="1dp"
                android:layout_height="15dp"/>
            <EditText
                android:id="@+id/et_phone"
                android:inputType="number"
                android:padding="10dp"
                android:maxLength="11"
                android:singleLine="true"
                android:hint="请输入手机号"
                android:textSize="14sp"
                android:background="@color/colorWhite"
                android:layout_toRightOf="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <View
            android:layout_marginLeft="10dp"
            android:background="@drawable/heng"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_code"
                android:layout_toLeftOf="@+id/view2"
                android:inputType="number"
                android:padding="10dp"
                android:maxLength="6"
                android:singleLine="true"
                android:hint="请输入验证码"
                android:textSize="14sp"
                android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <View
                android:id="@+id/view2"
                android:layout_marginRight="12dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tv_get_code"
                android:background="@drawable/shu"
                android:layout_width="1dp"
                android:layout_height="15dp"/>

            <TextView
                android:paddingTop="8dp"
                android:paddingLeft="8dp"
                android:paddingBottom="8dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/tv_get_code"
                android:text="获取验证码"
                android:textColor="@color/colorTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <View
            android:layout_marginLeft="10dp"
            android:background="@drawable/heng"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <EditText
            android:layout_marginTop="20dp"
            android:id="@+id/et_pass"
            android:layout_toLeftOf="@+id/view2"
            android:inputType="textPassword"
            android:padding="10dp"
            android:maxLength="6"
            android:singleLine="true"
            android:hint="请输入6-12位密码"
            android:textSize="14sp"
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_marginLeft="10dp"
            android:background="@drawable/heng"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <TextView
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/tv_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/theme_circle_bg"
            android:gravity="center"
            android:padding="12dp"
            android:text="快速注册"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <CheckBox
                android:textColor="@color/txt_99"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="8dp"
                style="@style/RegisterCheckboxTheme"
                android:id="@+id/checkbox_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我已阅读并接受"
                android:padding="8dp"
                android:singleLine="true"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/tv_agreement"
                android:text=""
                android:layout_marginTop="15dp"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
