<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.acticitys_my.NotifyDateilActivity">

    <include
        android:layout_width="match_parent"
        android:layout_height="48dp"
        layout="@layout/notify_top"
        android:id="@+id/top_notify"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title_notify"
        android:layout_below="@id/top_notify"
        android:text="123"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time_notify"
        android:layout_below="@id/title_notify"
        android:text="123"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/msg_notify"
        android:layout_below="@id/time_notify"
        android:text="123"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:textStyle="italic"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ads_notify"
        android:layout_below="@id/msg_notify"
        android:text="123"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:textStyle="italic"
        android:background="@color/colorBrown"/>

</RelativeLayout>