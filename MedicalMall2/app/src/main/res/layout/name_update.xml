<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/guanbi_2"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:id="@+id/back_update"
        android:layout_margin="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="创建一个昵称"
        android:layout_margin="5dp"
        android:layout_below="@id/back_update"
        android:textSize="18dp"
        android:id="@+id/title_update"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_below="@id/title_update"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:id="@+id/username_update"
        android:background="@drawable/et_gray_bg"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="保存"
        android:id="@+id/save_update"
        android:textColor="@android:color/white"
        android:background="@color/colorTheme"
        android:layout_margin="5dp"
        android:layout_below="@id/username_update"/>

</LinearLayout>
